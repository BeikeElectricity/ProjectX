<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eic.beike.projectx" >

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/FullscreenTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NameSplashActivity"
            android:label="@string/name_splash_activity_title" >
        </activity>
        <activity
            android:name=".activities.MenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/menu_activity_title"
            >
        </activity>
        <activity android:name=".activities.GameActivity" >
        </activity>
        <activity
            android:name=".activities.HighscoreActivity"
            android:label="@string/highscore_title_activity" >
        </activity>
        <activity
            android:name=".activities.BusWaitingActivity">
        </activity>
    </application>

</manifest>
