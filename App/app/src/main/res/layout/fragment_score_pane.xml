             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="eic.beike.projectx.activities.gameFragments.scorePane" android:orientation="horizontal"
              android:id="@+id/">

    <!-- TODO: Update blank fragment layout -->

    <TextView
