<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:weightSum="1" android:layout_weight=".15">
        <Button
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:text="@string/game_score_init"
                android:id="@+id/claimBonus" android:layout_gravity="center_horizontal"
                android:enabled="true" android:layout_weight="0.74"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/game_score_init"
                android:id="@+id/texScore" android:layout_gravity="right" android:layout_weight="0.64"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_weight="0.2">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/button00" android:layout_weight=".20"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/button01" android:layout_weight="0.20"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/button02" android:layout_weight="0.20"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                  android:layout_weight="0.2">
        <ImageButton android:layout_width="wrap_content" android:layout_height="fill_parent"
                     android:id="@+id/button10" android:layout_weight=".20"/>
        <ImageButton android:layout_width="wrap_content" android:layout_height="fill_parent"
                     android:id="@+id/button11" android:layout_weight="0.20"/>
        <ImageButton android:layout_width="wrap_content" android:layout_height="fill_parent"
                     android:id="@+id/button12" android:layout_weight="0.20"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                  android:layout_weight="0.2">
        <ImageButton android:layout_width="wrap_content" android:layout_height="fill_parent"
                     android:id="@+id/button20" android:layout_weight=".20" android:background="@color/green"
                />
        <ImageButton android:layout_width="wrap_content" android:layout_height="fill_parent"
                     android:id="@+id/button21" android:layout_weight="0.20" android:background="@color/blue"/>
        <ImageButton android:layout_width="wrap_content" android:layout_height="fill_parent"
                     android:id="@+id/button22" android:layout_weight="0.20" android:background="@color/red"/>
    </LinearLayout>
</LinearLayout>